{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
        "simple":{
            "format":"%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers":{
        "device":{
            "class":"logging.handlers.RotatingFileHandler",
            "filename":"log/device.log",
            "formatter":"simple",
            "maxBytes":1048576,
            "backupCount":5
        },
        "xbee_lib":{
            "class":"logging.handlers.RotatingFileHandler",
            "filename":"log/xbee_lib.log",
            "formatter":"simple",
            "maxBytes":1048576,
            "backupCount":5
        }
    },
    "loggers":{
        "receiver":{
            "level":"INFO",
            "handlers":["device"]
        },
        "digi.xbee":{
            "level":"INFO",
            "handlers":["xbee_lib"]
        }
    }
}